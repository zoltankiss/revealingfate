<p id="notice"><%= notice %></p>

<h1>Listing Readings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @readings.each do |reading| %>
      <%= link_to reading.title || "reading #{reading.id}", edit_reading_path(reading) %> | <%= link_to 'Destroy', reading, method: :delete, data: { confirm: 'Are you sure?' } %>
      <br />
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reading', new_reading_path %>
