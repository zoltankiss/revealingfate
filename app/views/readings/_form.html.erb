        <div class="td-heading-content"><%= @reading.birth_date.strftime("%Y") %></div>
      </td>
    </tr>
    <tr>
      <td>
        <%= f.select :hour_celestial_stem, (1..10).to_a.map { |e| ["#{number_to_human_readable(e)} celestial stem", e] } %>
