      <td>
        <div class="td-content-heading">Tenth Earthly Branch</div>
      </td>
    </tr>
    <tr>
      <td>
        <div class="td-content">Season of</div>
      </td>
      <td>
        <div class="td-content">Season of</div>
      </td>
      <td>
        <div class="td-content">Season of</div>
      </td>
      <td>
        <div class="td-content">Season of</div>
      </td>
    </tr>
  </table>

  <br /><br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
